<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/roomSelectionFragment">
    <fragment
        tools:layout="@layout/main_menu_fragment"
        android:id="@+id/roomSelectionFragment"
        android:name="com.example.songmatch.mainMenu.presentation.MainMenuFragment"
        android:label="RoomSelectionFragment" >
        <action
            android:id="@+id/action_roomSelectionFragment_to_joinRoomFragment"
            app:destination="@id/joinRoomFragment"
            app:popUpTo="@id/roomSelectionFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_roomSelectionFragment_to_roomFragment"
            app:destination="@id/roomFragment"
            app:popUpTo="@id/roomSelectionFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        tools:layout="@layout/join_room_fragment"
        android:id="@+id/joinRoomFragment"
        android:name="com.example.songmatch.mainMenu.presentation.JoinRoomFragment"
        android:label="JoinRoomFragment" >
        <action
            android:id="@+id/action_joinRoomFragment_to_roomFragment"
            app:destination="@id/roomFragment"
            app:popUpTo="@id/roomSelectionFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        tools:layout="@layout/room_fragment"
        android:id="@+id/roomFragment"
        android:name="com.example.songmatch.mainMenu.presentation.RoomFragment"
        android:label="RoomFragment" />
</navigation>